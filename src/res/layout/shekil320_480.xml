<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320px" android:layout_gravity="center" android:layout_height="480px" android:background="@drawable/teg">

<RelativeLayout 
android:id="@+id/LinearLayout01" 
android:layout_gravity="center_horizontal" android:background="@drawable/teg3" android:visibility="invisible" android:layout_height="380px" android:layout_marginTop="20px" android:layout_width="280px">
<TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:textSize="30px" android:layout_marginTop="25px"></TextView>
<ImageView android:id="@+id/imgvw1" android:layout_centerInParent="true" android:visibility="visible" android:layout_height="300px" android:layout_width="280px" android:background="@drawable/s2"></ImageView>






</RelativeLayout>
<RelativeLayout 
android:id="@+id/LinearLayout02" 
android:layout_gravity="center" android:gravity="center" android:layout_height="380px" android:layout_marginTop="-381px" android:background="@drawable/teg3" android:layout_width="280px">

<TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:textColor="@color/a" android:textSize="30px" android:layout_marginTop="-16px" android:text="@string/RED"></TextView>
<ImageView android:id="@+id/imgvw2" android:layout_gravity="center" android:visibility="visible" android:layout_height="300px" android:layout_width="280px" android:background="@drawable/s1"></ImageView>






</RelativeLayout>
<LinearLayout 
android:id="@+id/LinearLayout02"
android:layout_width="wrap_content" 
android:layout_gravity="center" android:layout_height="60px" android:layout_marginTop="10px">
<ImageButton android:background="@drawable/button_prev_normal" android:layout_width="150px" android:layout_marginTop="10px" android:layout_height="fill_parent" android:id="@+id/imgbt1"></ImageButton>
<ImageButton android:background="@drawable/button_next_normal" android:layout_width="150px" android:layout_marginTop="10px" android:layout_height="fill_parent" android:id="@+id/imgbt2"></ImageButton>


</LinearLayout>









</LinearLayout>
